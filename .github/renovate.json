{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>scop/common"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)requirements[\\w-]*\\.txt$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.pre-commit-config\\.yaml$/"
      ],
      "matchStrings": [
        "(?<depName>[\\w-]+)(?<currentValue>==[a-z0-9.]+)"
      ],
      "datasourceTemplate": "pypi"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "requirements-test.txt"
      ],
      "semanticCommitType": "test"
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "commitMessageTopic": "{{depName}}",
      "semanticCommitScope": "pre-commit"
    },
    {
      "groupName": "gitlint",
      "versioning": "pep440",
      "matchPackageNames": [
        "/(^|/)gitlint$/"
      ]
    },
    {
      "groupName": "ruff",
      "versioning": "pep440",
      "matchPackageNames": [
        "/(^|/)ruff(-pre-commit)?$/"
      ]
    }
  ]
}
